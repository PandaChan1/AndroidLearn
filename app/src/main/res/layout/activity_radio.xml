<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".RadioActivity">
    <RadioGroup
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:id="@+id/Radio_G_1"
        android:orientation="vertical">
        <RadioButton
            android:id="@+id/Radio_btn_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="男"
            android:textAllCaps="false"
            android:textSize="20sp"
            android:textColor="#ff3366"
            android:checked="true"/>
        <RadioButton
            android:id="@+id/Radio_btn_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="女"
            android:textSize="20sp"
            android:textColor="#ff6600"
            android:textAllCaps="false"/>
    </RadioGroup>
    <RadioGroup
        android:id="@+id/Radio_G_2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_below="@id/Radio_G_1"
        android:layout_marginTop="10dp">
        <RadioButton
            android:id="@+id/Radio_btn_3"
            android:layout_width="60dp"
            android:layout_height="30dp"
            android:text="男"
            android:textAllCaps="false"
            android:textSize="20sp"
            android:gravity="center"
            android:layout_marginLeft="10dp"
            android:textColor="#000000"
            android:button="@null"
            android:background="@drawable/radio_bg"/>
        <RadioButton
            android:id="@+id/Radio_btn_4"
            android:layout_width="60dp"
            android:layout_height="30dp"
            android:text="女"
            android:gravity="center"
            android:textColor="#000000"
            android:textSize="20sp"
            android:textAllCaps="false"
            android:checked="true"
            android:button="@null"
            android:layout_marginLeft="10dp"
            android:background="@drawable/radio_bg"/>
    </RadioGroup>

</RelativeLayout>